{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "paths": {
      "@atome/*": ["packages/*/src"],
      "atome": ["packages/atome/src"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src"
  ]
}
